@using System.Collections.Generic
@model MusicDating.Models.ViewModels.CreateEnsembleVm;

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEnsemble">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationMessage("Unique")
                <div class="form-group">
                    <label asp-for="EnsembleName" class="control-label"></label>
                    <input asp-for="EnsembleName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="EnsembleDescription" class="control-label"></label>
                    <textarea asp-for="EnsembleDescription" class="form-control" ></textarea>
                </div>

                
        
            @Html.ValidationMessage("Checkbox")
            @foreach (var item in Model.Genres)
            {
                <div class="form-group" >
                    <label>
                        <input type="checkbox"
                               name="Genres"
                               value="@item.Value"
                               
                               /> @item.Text
                        </label>
                </div>
            }
            
                   <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
