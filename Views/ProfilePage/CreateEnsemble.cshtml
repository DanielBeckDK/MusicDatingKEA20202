@using System.Collections.Generic
@model MusicDating.Models.ViewModels.AddInstrumentProfilePageVm;

@{
    ViewData["Title"] = "Create";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddInstrument">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <div class="form-group">
                    <select asp-for="Instrument" class ="form-control" asp-items="Model.Instruments" required>
                        <option value="">Select instrument</option>
                    </select> 
                </div>
                
        
            @foreach (var item in Model.Genres)
            {
                <div class="checkbox">
                    <label>
                        <input type="checkbox"
                               name="Genres"
                               value="@item.Value"
                               required
                               /> @item.Text
                        </label>
                    </div>
            }
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
        
                <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
